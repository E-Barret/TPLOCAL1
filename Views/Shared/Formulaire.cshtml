<!--Chargement du modèle utilisé pour la vue-->
@model TPLOCAL1.Models.FormulaireModel

<!--Disposition générale de la page-->
@{
    ViewBag.Title = "Formulaire";
    ViewBag.h1 = "Formulaire TP HN avis";
    ViewBag.LienSec = "ListeAvis";
    ViewBag.NomPrem = "Accueil";
    ViewBag.NomSec = "Liste avis";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<!--Formulaire-->
@using (Html.BeginForm("ValidationFormulaire", "Home", FormMethod.Post))
//En validant le formulaire, on passe la main à la méthode ValidationFormulaire présente dans le contrôleur Home.
{
    <table>
        <caption>Informations personnelles</caption>
        <tr>
            <th>@Html.LabelFor(model => model.Nom)</th>
            <td>@Html.TextBoxFor(model => model.Nom)
                <span class="erreur">@Html.ValidationMessageFor(model => model.Nom)</span>
            </td>
        </tr>
        <tr>
            <th>@Html.LabelFor(model => model.Prenom)</th>
            <td>
                @Html.TextBoxFor(model => model.Prenom)
                <span class="erreur">@Html.ValidationMessageFor(model => model.Prenom)</span></td>
        </tr>
        <tr>
            <th>@Html.LabelFor(model => model.Sexe)</th>
            <td>
                @Html.DropDownListFor(model => model.Sexe, new[]{
                    new SelectListItem() {Value = "Femme", Text = "Femme" },
                    new SelectListItem() {Value = "Homme", Text = "Homme" },
                    new SelectListItem() {Value = "Autre", Text = "Autre" }},
         "Sélectionner un sexe")
                <span class="erreur">@Html.ValidationMessageFor(model => model.Sexe)</span>
            </td>
        </tr>
        <tr>
            <th>@Html.LabelFor(model => model.Adresse)</th>
            <td>@Html.TextBoxFor(model => model.Adresse)
                <span class="erreur">@Html.ValidationMessageFor(model => model.Adresse)</span></td>
        </tr>
        <tr>
            <th>@Html.LabelFor(model => model.CodePostal)</th>
            <td>@Html.TextBoxFor(model => model.CodePostal)
                <span class="erreur">@Html.ValidationMessageFor(model => model.CodePostal)</span></td>
        </tr>
        <tr>
            <th>@Html.LabelFor(model => model.Ville)</th>
            <td>@Html.TextBoxFor(model => model.Ville)
                <span class="erreur">@Html.ValidationMessageFor(model => model.Ville)</span></td>
        </tr>
        <tr>
            <th>@Html.LabelFor(model => model.AdresseMail)</th>
            <td>@Html.TextBoxFor(model => model.AdresseMail)
                <span class="erreur">@Html.ValidationMessageFor(model => model.AdresseMail)</span></td>
        </tr>
    </table>
    <table>
        <caption>Informations formation suivie</caption>
        <tr>
            <th> @Html.LabelFor(model => model.DateDebutFormation)</th>
            <td> @Html.TextBoxFor(model => model.DateDebutFormation)
                <span class="erreur">@Html.ValidationMessageFor(model => model.DateDebutFormation)</span></td>

        </tr>
        <tr>
            <th>@Html.LabelFor(model => model.TypeFormation)</th>
            <td>
                @Html.DropDownListFor(model => model.TypeFormation, new[]{
                         new SelectListItem() {Value = "Formation Cobol", Text = "Formation Cobol" },
                         new SelectListItem() {Value = "Formation objet", Text = "Formation objet" },
                         new SelectListItem() {Value = "Formation double compétence", Text = "Formation double compétence" }},
             "Sélectionner une formation")
                <span class="erreur">@Html.ValidationMessageFor(model => model.TypeFormation)</span>
            </td>
        </tr>
    </table>
    <table>
        <caption>Avis sur la formation</caption>
        <tr>
            <th>@Html.LabelFor(model => model.AvisCobol)</th>
            <td>@Html.TextBoxFor(model => model.AvisCobol)
                <span class="erreur">@Html.ValidationMessageFor(model => model.AvisCobol)</span></td>
        </tr>
        <tr>
            <th>@Html.LabelFor(model => model.AvisObjet)</th>
            <td>@Html.TextBoxFor(model => model.AvisObjet)
                <span class="erreur">@Html.ValidationMessageFor(model => model.AvisObjet)</span></td>
        </tr>
    </table>
    <input type="submit" value="Valider" />
}